<div id="app">
    <div class="userContainer">
        <card-swipe stack="center">
            <card-swipe-item stack="center" v-for="user in users">
                <div :class="['userCard', user.name]">
                    <img :src="user.imageurl"/>
                    <div class="nameage">
                        {{user.name}}, {{user.age}}
                    </div>
                    <p>
                        {{user.bio}}
                    </p>
                </div>
            </card-swipe-item>
        </card-swipe>
    </div>
</div>
<script src="/assets/vue-card-swipe.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
<script>
var users = <%= raw @users.to_json %>;
const { CardSwipe, CardSwipeItem } = window.VueCardSwipe;
Vue.component('card-swipe', CardSwipe);
Vue.component('card-swipe-item', CardSwipeItem);
var app = new Vue({
  el: '#app',
  data: {
    users,
  }
})
</script>